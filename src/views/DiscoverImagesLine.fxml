                  <FontAwesomeIcon iconName="REFRESH" size="2.5em" translateX="5.0" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
      <HBox fx:id="discoverLineHBox" alignment="CENTER" prefHeight="200.0" prefWidth="782.0" spacing="20.0">
